{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"],
      "@components/*": ["app/components/*"],
      "@screens/*": ["app/screens/*"],
      "@navigation/*": ["app/navigation/*"],
      "@assets/*": ["app/assets/*"],
      "@hooks/*": ["app/hooks/*"],
      "@utils/*": ["app/utils/*"],
      "@context/*": ["app/context/*"],
      "@services/*": ["app/services/*"],
      "@constants/*": ["app/constants/*"]
    }
  }
} 